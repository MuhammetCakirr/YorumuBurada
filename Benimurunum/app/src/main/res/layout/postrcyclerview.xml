<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_margin="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <de.hdodenhof.circleimageview.CircleImageView
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/kullanicifoto"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/userphoto"
                        app:civ_border_width="2dp"
                        app:civ_border_color="#FF000000"/>
                    <LinearLayout
                        android:layout_marginLeft="3dp"
                        android:layout_toRightOf="@id/kullanicifoto"
                        android:id="@+id/tarihvekullaniciadi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/kullaniciadi"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="invadersp"
                            android:textColor="@color/black"
                            android:textStyle="bold">
                        </TextView>
                        <TextView
                            android:id="@+id/tarih"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="28 Ekim"
                            android:textColor="@color/Gray"
                            android:textStyle="bold">
                        </TextView>
                    </LinearLayout>
                </RelativeLayout>
                <ImageView
                    android:layout_gravity="center_horizontal"
                    android:layout_width="400dp"
                    android:layout_height="400dp"
                    android:id="@+id/postfoto"
                    android:src="@drawable/vazo">
                </ImageView>
                <RelativeLayout
                    android:layout_marginLeft="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/begenbtn"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:padding="14dp"
                        android:src="@drawable/ic_baseline_favorite_border_24" />
                    <ImageView
                        android:layout_toRightOf="@+id/begenbtn"
                        android:id="@+id/yorumlarıgorbtn"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:padding="14dp"
                        android:src="@drawable/ic_baseline_message_24"/>
                    <ImageView
                        android:layout_alignParentRight="true"
                        android:id="@+id/kaydetbtn"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:padding="14dp"
                        android:src="@drawable/ic_baseline_bookmark_border_24"/>
                    <ImageView
                        android:visibility="gone"
                        android:layout_toLeftOf="@+id/kaydetbtn"
                        android:id="@+id/indirimdemi"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:padding="14dp"
                        android:src="@drawable/ic_baseline_lightbulb_circle_24"/>
                    <ImageView
                        android:visibility="gone"
                        android:layout_toLeftOf="@+id/indirimdemi"
                        android:id="@+id/onlinemi"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:padding="14dp"
                        android:src="@drawable/ic_baseline_online_prediction_24"/>
                </RelativeLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/postsahibi"
                        android:layout_marginLeft="20dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="invadersp"
                        android:textStyle="bold"
                        android:textColor="@color/black">
                    </TextView>

                    <TextView
                        android:id="@+id/urunaciklama"
                        android:layout_marginLeft="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Fiyatına göre çok uygundu. Hemen almalısınız."
                        android:textStyle="bold">
                    </TextView>

                </LinearLayout>
                <TextView
                    android:id="@+id/begenisayisi"
                    android:layout_marginLeft="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5.654 beğenme"
                    android:textStyle="bold">
                </TextView>

                <androidx.cardview.widget.CardView
                    app:cardCornerRadius="10dp"
                    android:layout_margin="7dp"
                    android:backgroundTint="@color/floating_popup_divider_light"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Ürün Detayları"
                            android:gravity="center"
                            android:textSize="19sp"
                            android:textColor="@color/black">
                        </TextView>
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <LinearLayout
                                android:layout_marginLeft="5dp"
                                android:id="@+id/sollayout"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">
                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Ürün Adı:"
                                        android:textColor="@color/black">
                                    </TextView>
                                    <TextView
                                        android:id="@+id/urunadi"
                                        android:layout_marginRight="5dp"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Dekoratif Ice Vazo"
                                        android:textStyle="bold">
                                    </TextView>
                                </LinearLayout>
                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Ürün Fiyatı:"
                                        android:textColor="@color/black">
                                    </TextView>
                                    <TextView
                                        android:id="@+id/urunfiyati"
                                        android:layout_marginRight="5dp"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="245 TL"
                                        android:textStyle="bold">
                                    </TextView>

                                </LinearLayout>
                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Alınan Mağaza:"
                                        android:textColor="@color/black">
                                    </TextView>
                                    <TextView
                                        android:id="@+id/urunmagazasi"
                                        android:layout_marginRight="5dp"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="IKEA"
                                        android:textStyle="bold">
                                    </TextView>
                                </LinearLayout>
                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Alınma Tarihi:"
                                        android:textColor="@color/black">
                                    </TextView>
                                    <TextView
                                        android:id="@+id/urunalınmatarihi"
                                        android:layout_marginRight="5dp"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="10 Ağustos"
                                        android:textStyle="bold">
                                    </TextView>

                                </LinearLayout>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_alignParentRight="true"
                                android:layout_marginLeft="10dp"

                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">
                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Online mı alındı:"
                                        android:textColor="@color/black">
                                    </TextView>
                                    <TextView
                                        android:id="@+id/onlinemi2"
                                        android:layout_marginRight="5dp"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Evet"
                                        android:textStyle="bold">
                                    </TextView>
                                </LinearLayout>
                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="İndirimde miydi:"
                                        android:textColor="@color/black">
                                    </TextView>
                                    <TextView
                                        android:id="@+id/indirimdemi2"
                                        android:layout_marginRight="5dp"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Evet"
                                        android:textStyle="bold">
                                    </TextView>

                                </LinearLayout>
                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Puan: "
                                        android:textColor="@color/black">
                                    </TextView>
                                    <TextView
                                        android:id="@+id/puan"
                                        android:layout_marginRight="5dp"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="8"
                                        android:textStyle="bold">
                                    </TextView>
                                </LinearLayout>
                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Hangi Platform:"
                                        android:textColor="@color/black">
                                    </TextView>
                                    <TextView
                                        android:id="@+id/hangiplatform"
                                        android:layout_marginRight="5dp"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Trendyol"
                                        android:textStyle="bold">
                                    </TextView>

                                </LinearLayout>
                            </LinearLayout>
                        </RelativeLayout>

                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <RelativeLayout
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <androidx.cardview.widget.CardView
                        android:layout_centerVertical="true"
                        android:id="@+id/cardpostuser"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="30sp">
                        <ImageView
                            android:id="@+id/postuserfoto"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/ben">
                        </ImageView>
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:id="@+id/yorumpaylas"
                        android:backgroundTint="@color/resolver_text_color_secondary_dark"
                        android:layout_centerInParent="true"
                        android:layout_marginRight="5dp"
                        android:layout_alignParentRight="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        >
                        <TextView
                            android:padding="2dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Paylaş"
                            android:textSize="16sp"
                            android:textColor="@color/white">
                        </TextView>
                    </androidx.cardview.widget.CardView>
                    <EditText
                        android:layout_toRightOf="@+id/cardpostuser"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Yorum yap"
                        android:id="@+id/yorumcontent">
                    </EditText>
                </RelativeLayout>
            </LinearLayout>

</LinearLayout>